<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Listing Notes</h1>
  <%= link_to 'New Note', new_note_path %>

  <div class="row text-center">
    <% @notes.each do |note| %>
    <div class="col-md-3 col-sm-6">
      <div class="thumbnail">
        <!-- <img src="http://placehold.it/800x500" alt=""> -->
        <div class="caption">
          <h3><%= note.title %></h3>
          <h4><%= note.content %></h4>

          <p>
            <%= link_to 'Show', note %>
            <%= link_to 'Edit', edit_note_path(note) %>
            <%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %>
          </p>
        </div>
        <div class="text-left">
          <div class="container">
          <p><%= note.boolean_to_text %></p>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <br>
</div>