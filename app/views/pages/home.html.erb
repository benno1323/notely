<!-- Header -->
<a name="about"></a>
<div class="intro-header">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="intro-message">
					<h1>Notely</h1>
					<h3>Your online notebook! All your notes in one place!</h3>
					<hr class="intro-divider">
					<ul class="list-inline intro-social-buttons">
						<li>
							<a href="<%= new_user_registration_path %>" class="btn btn-default btn-lg">
								<span class="network-name">Sign Up</span>
							</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
	<!-- /.container -->
</div>
<!-- /.intro-header -->

<!-- Page Content -->
<div class="container">

	<!-- Title -->
	<div class="row">
		<div class="col-lg-12">
			<h3>Latest Features</h3>
		</div>
	</div>
	<!-- /.row -->

	<!-- Page Features -->
	<div class="row text-center">
		<% @last_notes.each do |last_note| %>
		<div class="col-md-3 col-sm-6 hero-feature">
			<div class="thumbnail">
				<div class="jumbotron">
					<h4><%= last_note.title %></h4>
				</div>
				<div class="caption container-fluid">
					<p>
						<a href="#" class="btn btn-primary">Buy Now!</a> <a href="#" class="btn btn-default">More Info</a>
					</p>
				</div>
			</div>
		</div>
		<% end %>
	</div>
	<!-- /.row -->

</div>
<!-- /.container -->

<!-- jQuery -->
<!-- <script src="js/jquery.js"></script> -->

<!-- Bootstrap Core JavaScript -->
<!-- <script src="js/bootstrap.min.js"></script> -->
<script>
	$('document').ready(function(){
		setCss();
	});

	function setCss(){
		$('.navbar-default').css('background-color', 'rgba(0, 0, 0, 0.0)');
		$('.navbar-default').css('border-color', 'rgba(0, 0, 0, 0.0)');
		$('.navbar-default').css('background-image', 'none');
		$('.navbar-default .navbar-nav > li > a').css('color', 'whitesmoke');
		$('.navbar-default .navbar-brand').css('color', 'whitesmoke');
		$('.intro-header').css('margin-top', '-75px');
	};
</script>