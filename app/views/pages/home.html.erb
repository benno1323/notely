<!-- Header -->
<a name="about"></a>
<div class="intro-header">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="intro-message">
					<h1>Notely</h1>
					<h3>Your online notebook! All your notes in one place!</h3>
					<hr class="intro-divider">
					<ul class="list-inline intro-social-buttons">
						<li>
							<a href="#" class="btn btn-default btn-lg">
								<span class="network-name">Sign Up</span>
							</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
	<!-- /.container -->
</div>
<!-- /.intro-header -->

<!-- Page Content -->
<div class="container">

	<hr>

	<!-- Title -->
	<div class="row">
		<div class="col-lg-12">
			<h3>Latest Features</h3>
		</div>
	</div>
	<!-- /.row -->

	<!-- Page Features -->
	<div class="row text-center">
		<% @last_notes.each do |last_note| %>
		<div class="col-md-3 col-sm-6 hero-feature">
			<div class="thumbnail">
				<div class="jumbotron">
					<h4><%= last_note.title %></h4>
				</div>
				<div class="caption container-fluid">
					<p>
						<a href="#" class="btn btn-primary">Buy Now!</a> <a href="#" class="btn btn-default">More Info</a>
					</p>
				</div>
			</div>
		</div>
		<% end %>
	</div>
	<!-- /.row -->

	<hr>

</div>
<!-- /.container -->

