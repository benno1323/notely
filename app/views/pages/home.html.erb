<!-- Bootstrap Core JavaScript -->
<!-- <script src="js/bootstrap.min.js"></script> -->
<script>
	$('document').ready(function(){
		setCss();

		$('.navbar-default .navbar-brand').hover(function(){
			$(this).css("color", "#F89406");
		}, function(){
			$(this).css("color", "whitesmoke");
		});

		$('.navbar-default .navbar-nav > li > a').hover(function(){
			$(this).css("color", "#F89406");
		}, function(){
			$(this).css("color", "whitesmoke");
		});
	});

	function setCss(){
		$('.navbar-default').css('background-color', 'rgba(0, 0, 0, .1)');
		$('.navbar-default').css('border-color', 'rgba(0, 0, 0, 0.0)');
		$('.navbar-default').css('background-image', 'none');
		$('.intro-header').css('margin-top', '-75px');
	};
</script>