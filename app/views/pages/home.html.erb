<!-- Header -->
<a name="about"></a>
<div class="intro-header">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="intro-message">
					<h1>Notely</h1>
					<br>
					<h3>All your notes anytime, anywhere!</h3>
					<br>
					<ul class="list-inline intro-social-buttons">
						<li>
							<a href="<%= new_user_registration_path %>" class="btn btn-success btn-lg">
								<span class="network-name">Sign Up</span>
							</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
	<!-- /.container -->
</div>
<!-- /.intro-header -->
<h2 class="home-listing-separator"></h2>
<!-- Page Content -->
<div class="container">

	<!-- Title -->
	<!-- /.row -->

	<!-- Page Features -->
	<div class="row text-center">
		<% @last_notes.each do |last_note| %>
		<div class="col-md-4 col-sm-6">
				<div class="jumbotron">
					<h4><%= link_to(last_note.title, last_note) %></h4>
				</div>
		</div>
		<% end %>
	</div>
	<!-- /.row -->

</div>
<!-- /.container -->

<!-- jQuery -->
